# Default log rotation settings
rotate 4
weekly
create
compress

${output_dir}/var/log/zeo.log {
    postrate
        ${output_dir}/bin/zeo logreopen
    endscript
}

${output_dir}/var/log/instance*.log {
    postrotate
        /bin/kill -URS2 \$(cat ${output_dir}/var/instance.pid)
    endscript
}


